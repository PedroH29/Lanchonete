@model IEnumerable<Lanchonete.Models.Categoria>

@{
    ViewBag.Title = "Index";
}

<h2>CATEGORIAS</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>

        <td>
            @Html.ActionLink("EDITAR", "Edit", new { id=item.CategoriaID }) |
            @Html.ActionLink("DETALHES", "Details", new { id=item.CategoriaID }) |
            @Html.ActionLink("DELETAR", "Delete", new { id=item.CategoriaID })
        </td>
    </tr>

}

</table>
